@page
@model Web_Site_Project.Pages.DeleteCustomerModel
@{
    ViewData["Title"] = "DeleteCustomer";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <h1 class="hdr-text">Enter the information below to Delete a Customer</h1>

    <form name="DeleteCustomer" method="post">
        <div>
            <label asp-for="New_Customer.CustomerID" class="lbl-text">CustomerID:</label>
            <input type="text" placeholder="Required" min="0" asp-for="New_Customer.CustomerID" required>            
        </div>

        <input type="submit" class="btn-expand" value="Submit">
    </form>
    <br />
    <h3 class="imp-message"><b>@Html.Raw(Model.Message)</b></h3>
</body>
</html>