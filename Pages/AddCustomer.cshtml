@page
@model Web_Site_Project.Pages.AddCustomerModel
@{
    ViewData["Title"] = "AddCustomer";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <h1 class="hdr-text">Enter the information below to Add a Customer</h1>

    <form name="AddCustomer" method="post">
        <div>
            <label asp-for="New_Customer.CustomerName" class="lbl-text">CustomerName:</label>
            <input type="text" placeholder="Required" asp-for="New_Customer.CustomerName" required>
            <br />
            <label asp-for="New_Customer.Address" class="lbl-text">Address:</label>
            <input type="text" placeholder="Required" asp-for="New_Customer.Address" required>
            <br />
            <label asp-for="New_Customer.City" class="lbl-text">City:</label>
            <input type="text" placeholder="Required" asp-for="New_Customer.City" required>
            <br />
            <label asp-for="New_Customer.Province" class="lbl-text">Province:</label>
            <input type="text" placeholder="Required" asp-for="New_Customer.Province" required>
            <br />
            <label asp-for="New_Customer.PostalCode" class="lbl-text">PostalCode:</label>
            <input type="text" placeholder="Required" asp-for="New_Customer.PostalCode" required>
        </div>

        <input type="submit" class="btn-expand" value="Submit">
    </form>
    <br />
    <h3 class="imp-message"><b>@Html.Raw(Model.Message)</b></h3>
</body>
</html>