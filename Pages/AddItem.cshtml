@page
@model Web_Site_Project.Pages.AddItemModel
@{
    ViewData["Title"] = "AddItem";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <h1 class="hdr-text">Enter the information below to Add a Item</h1>

    <form name="AddItem" method="post">
        <div class="grid-container">
            <label asp-for="New_Item.ItemCode" class="lbl-text">Item Code:</label>
            <input type="text" placeholder="Required" asp-for="New_Item.ItemCode" required>
            <br />
            <label asp-for="New_Item.Description" class="lbl-text">Description:</label>
            <input type="text" placeholder="Required" asp-for="New_Item.Description" required>
            <br />
            <label asp-for="New_Item.UnitPrice" class="lbl-text">UnitPrice:</label>
            <input type="text" placeholder="Required" asp-for="New_Item.UnitPrice" required>
            <br />
            <label asp-for="New_Item.QauntityInStock" class="lbl-text">QauntityInStock:</label>
            <input type="text" placeholder="Required" asp-for="New_Item.QauntityInStock" required>
        </div>

        <input type="submit" class="btn-expand" value="Submit">
    </form>
    <br />
    <h3 class="imp-message"><b>@Html.Raw(Model.Message)</b></h3>
</body>
</html>